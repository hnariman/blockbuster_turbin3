{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Anchor Tests",
      "runtimeExecutable": "anchor", // This is the command
      "runtimeArgs": [
        "test",
        "--skip-build",
        // "--skip-deploy",
        // "--skip-local-validator"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/tests/**/*.js"
      ]
    }
  ]
}